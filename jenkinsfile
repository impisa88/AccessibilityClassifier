pipeline{
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')
    }

    stages {
        stage('Build') {
          steps {
            sh 'docker build -t jimpisa88/jenkins-docker-hub .'
          }
        }
        stage('Login') {
          steps {
            sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
          }
        }
        stage('Push') {
          steps {
            sh 'docker push impisa88/jenkins-docker-hub'
          }
        }
      }
      post {
        always {
          sh 'docker logout'
        }
  }
}